# HeinerCast Environment Configuration
# Copy this file to .env and update the values

# ===========================================
# APPLICATION SETTINGS
# ===========================================
APP_NAME=HeinerCast
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8000

# Secret key for session encryption (generate a secure random string)
SECRET_KEY=change-this-to-a-secure-random-string-at-least-32-characters

# ===========================================
# DATABASE
# ===========================================
# PostgreSQL connection URL
DATABASE_URL=postgresql://heinercast:password@localhost:5432/heinercast

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET_KEY=change-this-to-another-secure-random-string
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# FILE STORAGE
# ===========================================
# Storage type: "local" or "google_drive"
STORAGE_TYPE=local
STORAGE_PATH=./storage

# Google Drive (if using google_drive storage type)
# GOOGLE_DRIVE_CREDENTIALS_PATH=/path/to/credentials.json

# ===========================================
# API KEYS ENCRYPTION
# ===========================================
# Encryption key for user API keys (must be exactly 32 characters)
ENCRYPTION_KEY=change-this-encryption-key-32ch

# ===========================================
# DEFAULT API KEYS (Optional)
# ===========================================
# These are used if user hasn't configured their own keys
# DEFAULT_OPENROUTER_API_KEY=
# DEFAULT_ELEVENLABS_API_KEY=
# DEFAULT_KIEAI_API_KEY=

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_LOGIN=5/minute
RATE_LIMIT_GENERATION=10/hour

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=INFO
LOG_PATH=./logs

# ===========================================
# PRODUCTION SETTINGS (when APP_ENV=production)
# ===========================================
# Uncomment and configure for production deployment
# APP_DEBUG=false
# APP_URL=https://your-domain.com
